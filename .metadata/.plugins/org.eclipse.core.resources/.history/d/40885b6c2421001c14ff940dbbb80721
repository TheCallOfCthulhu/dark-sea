package rapture.city;

import java.util.Scanner;

public class Welcome {
	
	
	//////// Scanner - pro INT ////
	private static int nascanuj () {
		Scanner sc = new Scanner (System.in);
	//	int volba = sc.nextInt();						// lze pouzit primo v returnu
	//	sc.close(); 									//kdyz se jednou zavre uz ho nelze otevrit, proc?
		return sc.nextInt();
	}
	
	
	private static void  zapniKalkulacku () {
		System.out.println("Zadej prvni cislo");
		int prvniCislo = nascanuj();
		System.out.println("Zadej druhe cislo");
		int druheCislo = nascanuj();
		System.out.println("Zadané èísla jsou: \"" + prvniCislo + "\" a \"" + druheCislo + "\" \n");		
		System.out.println("Výsledek sèítání je:\t " + prvniCislo + " + " + druheCislo + " = " + (prvniCislo+druheCislo));
		System.out.println("Výsledek odeèítání je:\t " + prvniCislo + " - " + druheCislo + " = " + (prvniCislo-druheCislo));
		System.out.println("Výsledek násobení je:\t " + prvniCislo + " * " + druheCislo + " = " + (prvniCislo*druheCislo));
		System.out.println("Výsledek dìlení je:\t " + prvniCislo + " / " + druheCislo + " = " + (prvniCislo/druheCislo));
		
	}
	
	

	public static void main(String[] args) {
	
		System.out.println("WELCOME TO RATPURE CITY");
		
		zapniKalkulacku();

		System.out.println("KONEC");
		
		
		
		
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	

}
