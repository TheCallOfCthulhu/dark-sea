package rapture.city;

import java.util.Random;
import java.util.Scanner;

public class ProlhanyKostky {
	
	static Random rd = new Random ();
	

	public static void main(String[] args) {
		
		int zadanaHodnota = 0;
		int zadanyPocet = 0;
		int celkovaHodnota = 0;
		int celkovyPocet = 0;
		
		int vstup1;

		Scanner sc = new Scanner (System.in);

				
		
		Hraci hrac1 = new Hraci ("Jarek", 5); 
		Hraci hrac2 = new Hraci ("Rosta", 5); 
		
		int veris = 1;
		
		hrac1.generuj();
		hrac2.generuj();

		
//		System.out.println("hrac " + hrac1.jmeno + " ma " + pole1.length + " kostek");
//		System.out.println("hrac " + hrac2.jmeno + " ma " + pole2.length + " kostek");
		
		
		do {
		System.out.println("na rade je hrac1, zadej hodnotu kostky");
		
		//vstup a overeni hodnoty
			do {
					vstup1 = sc.nextInt();
					if (zadanaHodnota <= vstup1) {
						zadanaHodnota = vstup1;
						} else {
							System.out.println("zadal si nizke cislo. zadej cislo znovu");
						}
			} while (vstup1 < zadanaHodnota);
			
		System.out.println("na rade je hrac1, zadej pocet kostek");
		
		//vstup a overeni poctu 
		do {
			vstup1 = sc.nextInt();
			if (zadanyPocet <= vstup1) {
				zadanyPocet = vstup1;
				} else {
					System.out.println("zadal si nizke cislo. zadej cislo znovu");
				}
	} while (vstup1 < zadanyPocet);
		
		System.out.println(zadanyPocet + "x " + zadanaHodnota);
	
		
			
			if (rd.nextBoolean()) {
				System.out.println("VERI");
				zadanaHodnota = zadanaHodnota+1;
				zadanyPocet = zadanyPocet+1;
				System.out.println(zadanyPocet + "x " + zadanaHodnota);
			} else {
				System.out.println("NEVERI");
				////pocitani kostek a hodnot
				for (int policko:hrac1.pole) {
					if (policko==zadanaHodnota) {
						celkovyPocet++;
									}
						}
					for (int policko:hrac2.pole) {
					if (policko==zadanaHodnota) {
						celkovyPocet++;
								}
								}
					if (zadanyPocet <= celkovyPocet) {
						System.out.println("NEMA PRAVDU");
					} else System.out.println("MA PRAVDU");
					System.out.println(hrac1.pole);
					System.out.println(hrac2.pole);
			}
			
			System.out.println("veris nebo neveris?");
			//zadanaHodnota = sc.nextInt();
			String clean = sc.nextLine();
			veris = sc.nextInt();
			System.out.println(veris);
		} while (veris == 1);
		
		
		System.out.println(hrac1.pole);
		System.out.println(hrac2.pole);
		
		
		for (int policko:hrac1.pole) {
			if (policko==zadanaHodnota) {
				celkovyPocet++;
							}
				}
			for (int policko:hrac2.pole) {
			if (policko==zadanaHodnota) {
				celkovyPocet++;
						}
						}
		
		if (zadanyPocet <= celkovyPocet) {
			System.out.println("NEMAS PRAVDU");
		} else System.out.println("MAS PRAVDU");
		

		
		
		
		
		sc.close();
		
		
		
	}

}
